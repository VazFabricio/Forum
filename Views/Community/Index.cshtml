@model IEnumerable<ForumUniversitario.Entidades.Community>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Index</h1>
    <div class="text-center mb-4">
        <a asp-action="Create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Create New</a>
    </div>
    <div class="grid grid-cols-12 gap-4">
        <div class="col-span-2">
            <!-- Espaço reservado para outras informações -->
        </div>
        <div class="col-span-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                @foreach (var community in Model)
                {
                    <div class="bg-white p-4 rounded shadow mb-4">
                        <div class="flex items-center justify-between mb-2">
                            <a href="/community/@community.Id">
                                <p><strong>@community.Name</strong></p>
                            </a>
                            <p class="text-gray-500">@community.CreatedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                        <p class="community-description mt-2">@community.Description</p>
                    </div>
                }
            </div>
        </div>
        <div class="col-span-2">
            <!-- Espaço para anúncios ou outras informações -->
        </div>
    </div>
</div>
