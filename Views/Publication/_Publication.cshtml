@using ForumUniversitario.Entidades
@model IEnumerable<ForumUniversitario.Entidades.Publication>

@{
    ViewData["Title"] = "UniSync";
}

<div class="container mx-auto p-4">
    @* <p> *@
    @*     <a asp-action="Create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Nova Publicação</a> *@
    @* </p> *@

    <button id="openCreateModalBtn" class="btn btn-primary">Criar Publicação</button>

    <div class="grid grid-cols-12 gap-4">
        <div class="col-span-2">
            <div class="bg-gray-200 p-4 rounded mt-4">
                <h3 class="text-lg font-bold">Top 3 Usuários com Mais Postagens</h3>
                <ul class="mt-2">
                    @foreach (var userGroup in Model.GroupBy(p => p.UserId).OrderByDescending(g => g.Count()).Take(3))
                    {
                        //alterar para que esses usuários sejam armazenados no controller para aliviar o frontend.
                        var user = userGroup.First().User;
                        <li>@user.UserName - @userGroup.Count() postagens</li>
                    }
                </ul>
            </div>
        </div>

        <div class="col-span-8">
            <div class="timeline mt-4">
                @foreach (var publicacao in Model)
                {
                    <div class="bg-white p-4 rounded shadow mb-4">
                        <div class="flex items-center justify-between mb-2">
                            <p>
                                <strong>@publicacao.User.AccountName</strong>
                            </p>
                            <p class="text-gray-500">@publicacao.CreatedAt</p>
                        </div>
                        <h3 class="text-lg font-bold">
                            <a asp-action="Details" asp-route-id="@publicacao.Id">@publicacao.Title</a>
                        </h3>
                        <p class="mt-2">@publicacao.Content</p>
                        <p>Comunidade: @publicacao.Community.Name</p>
                        <div class="flex items-center">
                            @* ABRIR A MODAL DE COMENTAR *@
                            <a asp-action="Details" asp-route-id="@publicacao.Id">
                                <i class="gg-comment"></i>
                            </a>
                            <a>
                                <i>teste</i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>


        <div class="col-span-2">
            <!-- Espaço para anúncios -->
            <div class="bg-yellow-200 p-4 rounded mt-4">
                <h3 class="text-lg font-bold">Anúncios</h3>
                <p class="mt-2">Espaço reservado para futuramente adicionar anúncios.</p>
            </div>
        </div>
    </div>
</div>

<div id="createModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document"> <!-- Alterado o tamanho do modal para modal-xl -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Criar Publicação</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
               
            </div>
        </div>
    </div>
</div>


<script>
$(document).ready(function () {
    $("#openCreateModalBtn").click(function () {
        $.get("/Publication/Create", function (data) {
            $("#createModal .modal-body").html(data);
            $("#createModal").modal("show");
        });
    });
});
</script>