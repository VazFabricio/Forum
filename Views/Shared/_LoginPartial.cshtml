@using Microsoft.AspNetCore.Identity
@using ForumUniversitario.Areas.Identity.Data

@inject SignInManager<ForumUniversitarioUser> SignInManager
@inject UserManager<ForumUniversitarioUser> UserManager

<ul class="flex items-center space-x-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="nav-link text-dark" asp-area="" asp-controller="Community" asp-action="Index">Comunidades</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Publication" asp-action="Index">Publicações</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Comment" asp-action="Index">Comments</a>
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @ViewData["UserName"] !</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>


