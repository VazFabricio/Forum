<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ForumUniversitario</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ForumUni.styles.css" asp-append-version="true"/>
    @* <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700&display=swap" rel="stylesheet"> *@
 <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300&family=Qwitcher+Grypen&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true"/>
    <link rel="icon" href="~/LOGOFORUM.jpg" type="image/x-icon"/>
    <link rel="shortcut icon" href="~/LOGOFORUM.jpg" type="image/x-icon"/>
</head>
<body class="flex flex-col min-h-screen roboto-font">
@if (ViewBag.HideNavBar == null)
{
    <header class="bg-gray-general gray-border box-shadow roboto-font">
        <nav>
            <div class="container flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <a class="navbar-brand" asp-area="" asp-controller="Publication" asp-action="Index">Forum Universitario</a>
                    <div class="search-box">
                        <input type="text" placeholder="Pesquisar...">
                        <button>Buscar</button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

}
<div class="w-full flex-grow">
    @* DEFINIR COISAS GERAIS DO CORPO AQUI *@
    <main role="main" class="flex-grow roboto-font">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted mt-auto roboto-font">
    <div class="container">
        &copy; 2023 - ForumUni - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
   body, html, header{
   background-color: rgb(26, 26, 26);
   font-family: "Arial", sans-serif; /* Substitua "Arial" pela fonte que desejar */
   color: white; /* Cor da fonte */ 
   }
</style>